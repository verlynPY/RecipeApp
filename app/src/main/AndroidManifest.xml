<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testintretrofit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Testintretrofit">
        <activity
            android:name=".view.ErrorNetworkView"
            android:label="@string/title_activity_error_network_view"
            android:theme="@style/Theme.Testintretrofit.NoActionBar"></activity>
        <activity
            android:name=".view.SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.Testintretrofit.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.testing"
            android:label="@string/title_activity_testing"
            android:theme="@style/Theme.Testintretrofit.NoActionBar"></activity>
        <activity
            android:name=".view.FavoriteViewRecipe"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_favorite_view_recipe"
            android:theme="@style/Theme.Testintretrofit.NoActionBar" />
        <activity android:name=".view.ViewComponent.MainActivity" />
        <activity
            android:name=".view.NavigationViewRecipe"
            android:label="@string/title_activity_navigation_view_recipe"
            android:theme="@style/Theme.Testintretrofit.NoActionBar" />
        <activity
            android:name=".view.SearchViewRecipe"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_search_view_recipe"
            android:theme="@style/Theme.Testintretrofit.NoActionBar" />
        <activity
            android:name=".view.DetailsViewRecipe"
            android:label="@string/title_activity_details_view_recipe"
            android:theme="@style/Theme.Testintretrofit.NoActionBar" />
        <activity
            android:name=".view.MainViewRecipe"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_main_view_recipe"
            android:theme="@style/Theme.Testintretrofit.NoActionBar"></activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>